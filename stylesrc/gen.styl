@import colors

body
  color: black-color;
  background-color: white-color;
  margin: 0
  padding: 0
  width: 100%
  font-family: 'Open Sans', sans-serif;
  font-size: 1em;

.maincontainer
  width: 100%

a
  text-decoration: none

h1
  margin: 0

button
  cursor: pointer;

ul li
  list-style: none;

button
  letter-spacing: 1px;

.themecolor
  color: theme-color;

.bottomdivider
  margin-bottom: 3vh;

.divider5
  height: 5vh

.hpadded
  padding: 8px 16px;

.center
  display: table;
  margin: auto;

.vcentercontainer
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

.horizontal
  flex-direction: row;

.invisible
  visibility: hidden;

.flex
  display: flex;

.material
  box-shadow: 0px 0px 8px black-color;
