nav
  width: 100%
  display: flex
  position: fixed;
  justify-content: space-between
  align-items: stretch;
  background-color: #ccc

  #hamburger
    display: none

  .logo
    margin: 0px 16px

  a
    padding: 16px 0px

  ul
    display: flex
    min-width: 50%
    margin: 0
    padding: 0

    li
      flex-grow: 1

      a
        display: block
        text-align: center

  #centerhelper
    display: none
    visibility: hidden;

  #mobilehamburger
    display: none

@media (max-width: 40em)
  nav

    #hamburger
      display: block
      border: 1px solid #000

    #mobilehamburger
      display: block;

    #centerhelper
      display: block;

    ul.responsivemenu
      visibility: hidden;
      display: block;
      position: fixed;
      left: 0;
      top: 0;
      min-width: 0
      background-color: #ccc;
      color: #fff;
      height: 100vh;

      li a
        padding: 8px 8px

    ul.visible
      visibility: visible;
