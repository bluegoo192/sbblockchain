nav
  width: 100%
  display: flex
  position: fixed;
  justify-content: space-between
  align-items: stretch;
  background-color: #ccc

  #hamburger
    display: none

  .logo
    margin: 0px 16px

  a
    padding: 16px 0px

  ul
    display: flex
    min-width: 50%
    margin: 0
    padding: 0

    li
      flex-grow: 1

      a
        display: block
        text-align: center

  #centerhelper
    display: none
    visibility: hidden;

@media (max-width: 34em)
  nav
    ul
      visibility: hidden;

    #hamburger
      display: block
      border: 1px solid #000

    #centerhelper
      display: block;

    ul.responsivemenu
      flex-direction: column;
      position: fixed;
      left: 0;
      top: 0;
      min-width: 0
