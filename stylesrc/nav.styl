nav
  width: 100%
  display: flex
  justify-content: space-between
  align-items: stretch;

  #hamburger
    display: none

  ul
    display: flex
    min-width: 50%
    margin: 0

    li
      flex-grow: 1

      a
        display: block
        text-align: center;

@media (max-width: 34em)
  nav
    ul
      display: none

    #hamburger
      display: block
      border: 1px solid #000
